<view>
  <swiper
    indicator-dots="{{true}}"  
    autoplay="{{true}}"
    style="width: 790rpx;">
    <swiper-item>
      <image src="https://picsum.photos/200"></image>
    </swiper-item>
    <swiper-item>
      <image src="https://picsum.photos/250"></image>
    </swiper-item>
    <swiper-item>
      <image src="https://picsum.photos/300"></image>
    </swiper-item>
    <swiper-item>
      <image src="https://picsum.photos/350"></image>
    </swiper-item>
    <swiper-item>
      <image src="https://picsum.photos/400"></image>
    </swiper-item>
  </swiper>  
</view>
<view>
  <text class="title">我爱{{name}}</text>
</view>
<view>
  <text class="time">现在是{{now}}</text>
  <button bindtap="buttonHandler" class="weui-btn weui-btn_primary">点击改变</button>
  <button class="weui-btn weui-btn_primary">
    主操作
  </button>
  <button class="weui-btn weui-btn_primary weui-btn_loading">
    <i class="weui-loading"></i>正在加载
  </button>
  <button class="weui-btn weui-btn_primary weui-btn_disabled">
    禁止点击
  </button>
</view>
